@model List<ShopGiay.Models.DONHANG>
@{
    ViewBag.Title = "DonMua";
    Layout = "~/Views/Shared/_ClientLayouts.cshtml";
}

@section SiteNavBar {
    @{ Html.RenderAction("SiteNavBar", "Store");}
}
<div class="site-section">
    <div class="container">
        <div class="row">
           <hr />
            <div class="col-md-12" style="padding-top: 50px">
                <div class="row mb-5">
                    <div class="col-md-12">
                        <h2 class="h3 mb-3 text-black">Your Order</h2>
                        <div class="p-3 p-lg-5 border">
                            @foreach (var item in Model)
                            {
                                <table class="table site-block-order-table mb-5">
                                    <thead>
                                        <tr>
                                            <th>Mã ĐƠN HÀNG</th>
                                            <th>NGÀY MUA</th>
                                            <th>TÌNH TRẠNG</th>
                                            <th>TỔNG TIỀN</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@item.MaDH</td>
                                            <td>@item.NgayDatHang</td>
                                            <td><strong>@item.TinhTrang</strong></td>
                                            <td>
                                                <strong class="mx-2">
                                                    @string.Format("{0:0,0}", @item.TongTien) VNĐ
                                                </strong>
                                            </td>
                                            <td>@Html.ActionLink("Chi tiết đơn hàng","DetailDonHang", new { @maDH = item.MaDH})</td>
                                        </tr>
                                        

                                    </tbody>
                                </table>
                            }
                        </div>
                         
                    </div>
                </div>


            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                    <button class="btn btn-success btn-lg py-3 btn-block" type="submit">Place Order</button>
                </div>
            }
        </div>
        <!-- </form> -->
    </div>
</div>

@section SiteFooter{
    @Html.Action("SiteFooter", "Store")
}


