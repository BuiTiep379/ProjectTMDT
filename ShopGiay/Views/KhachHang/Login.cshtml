@model ShopGiay.Models.KHACHHANG
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_ClientLayouts.cshtml";
}

<div class="login">
    <div class="wrap">
        <div class="col_1_of_login span_1_of_login">
            <h4 class="title">ĐĂNG KÝ TÀI KHOẢN MỚI</h4>
            <div class="button1">
                <a href="/KhachHang/Register"><input type="submit" name="Submit" value="ĐĂNG KÝ"></a>
            </div>
            <div class="clear"></div>
        </div>
        <div class="col_1_of_login span_1_of_login">
            <div class="login-title">
                <h4 class="title">ĐĂNG NHẬP</h4>
                <div class="comments-area">
                    @using (Html.BeginForm("Login", "KhachHang", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group" style="padding-top: 10px">
                            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-group" style="padding-top: 10px">
                            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "badge badge-danger" })
                        </div>
                        <div class="form-group" style="padding-top: 20px">
                            <input type="submit" value="ĐĂNG NHẬP">
                        </div>
                        <div class="clear"></div>
                    }
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>



